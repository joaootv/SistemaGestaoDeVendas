@model SistemaGestaoDeVendas.Models.Dominio.ViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Informações da Venda</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <h4>@Html.DisplayNameFor(model => model.Venda.id)</h4> 
        </dt>
        <dd class="col-sm-10">
           <h4> @Html.DisplayFor(model => model.Venda.id)</h4> 
        </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Venda.cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Venda.cliente.nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Venda.dataVenda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Venda.dataVenda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Venda.total)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Venda.total)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Venda.status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Venda.status)
            </dd>
        </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Venda.id">Editar</a> |
    <a asp-action="Index">Listagem de Vendas</a>
</div>

<h1>Produtos</h1>
<p>
    <a asp-controller="ItemVendas" asp-action="AddProdutos">Adicionar Produtos</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID VENDA
            </th>
            <th>
                PRODUTOS
            </th>
            <th>
                QTDE
            </th>
            <th>
                PREÇO
            </th>
            <th>
                SUB-TOTAL
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ItemVenda) if (item.vendaID == Model.Venda.id)
            {
                {
            <tr>
                <td> 
                    @Html.DisplayFor(modelItem => @item.vendaID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.produto.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subTotal)
                </td>
                <td>
                    <a asp-controller="ItemVendas" asp-action="Delete" asp-route-id="@item.id">Remover</a>
                </td>
            </tr>
                }
            }
    </tbody>
</table>
